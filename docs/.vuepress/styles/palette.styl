/* This file is for overrides of existing styles. It is not for new Komodo-created classes or other non-default stylizations. Please see the index.styl file in .vuepress/styles/ directory for the latter */

/* Import Montserrat & Rubik */

@import url("/fonts/Montserrat/Montserrat.css")
@import url("/fonts/Rubik/Rubik.css")

/* Set default values */

* {
    font-family: 'Rubik-Light', Arial, sans-serif;
}

$borderColor = #04748E;

$textColor = #FFFFFF;

$accentColor = #00EDD3; 

$codeBgColor = #000000;

/* Additional Overrides */


.hero > img, .home, img, target {
	max-width: 100%;
	max-height: 100%;
	overflow: hidden;
}

span .site-name .can-hide {
}

div .navbar, .navbar .links, .search-box, .nav-links, .nav-links .can-hide {
    background-color: #026782;
}

div .navbar .search-box input, div .navbar .search-box .suggestions, div .navbar .search-box .suggestions .focused {
    background-color: #000000;
}

.navbar .site-name, h1, h2, h3 {
    font-family: 'Rubik', sans-serif;
    font-weight: 600;
}

div .sidebar {
    background-color: #051019; 
}

div .page {
    background-image: linear-gradient(135deg, #003A4B, #0B141B);
    min-height: 100vh;
    background-attachment: fixed;
}

.page .content p code {
    background-color: hsla(0,0,0,.7);
}

thead tr {
    background-color: #026782;
    color: #00EDD3;
    font-weight: 500;
}

tbody tr a {
    color: #3FA9F5;
}

table tbody tr:nth-child(2n) {
    background-color: #1B456E;
}

body .custom-block.tip, body .custom-block.tip .custom-block-title {
    background-color: #026782;
    border-color: #00EDD3;
}

body .custom-block.warning, body .custom-block.warning .custom-block-title {
    background-color: #1B456E;
    border-color: #3FA9F5;
    color: #FFFFFF;
}

body .custom-block.danger, body .custom-block.danger .custom-block-title {
    background-color: #003038;
    border-color: #0474BE;
    color: #FFFFFF;
}

.content code {
    background-color: #000000;
}

@media (max-width: 419px){ 

	//nav bar, default is 3.6rem
	.navbar {
		height: 5.0rem;
	}

	//side bar top heading loses spacing, default is 0.5rem on first co-ordinate
	.sidebar .nav-links .nav-item {
		padding: 1.5rem 0 0.5rem 1.5rem;
	}

	// top heading of main page loses spacing, default is -1.5rem
	.content:not(.custom) > h1:first-child, .content:not(.custom) > h2:first-child, .content:not(.custom) > h3:first-child, .content:not(.custom) > h4:first-child, .content:not(.custom) > h5:first-child, .content:not(.custom) > h6:first-child {
		margin-top: -0.5rem;
	}
}

